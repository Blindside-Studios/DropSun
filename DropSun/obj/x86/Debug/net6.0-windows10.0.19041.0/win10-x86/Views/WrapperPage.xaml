<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DropSun.Views.WrapperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropSun.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="10">
            <TextBox x:ConnectionId='3' x:Name="ExampleCityTextBox" Width="180"/>
            <Button x:ConnectionId='4' x:Name="ConfirmCityButton" Content="ObtainWeather"                                />
            <Button x:ConnectionId='5' x:Name="ShowSunnyButton" Content="ForceSunny"                              />
            <Button x:ConnectionId='6' x:Name="ShowRainButton" Content="ForceRainy"                             />
        </StackPanel>
        <Frame x:ConnectionId='2' x:Name="ContentFrame" Content="WeatherView" Margin="200,5,5,5" CornerRadius="3"/>
    </Grid>
</Page>

