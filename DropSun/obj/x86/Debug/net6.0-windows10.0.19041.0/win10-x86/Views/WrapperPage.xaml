<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DropSun.Views.WrapperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropSun.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <ListView x:ConnectionId='2' x:Name="LocationsListView" HorizontalAlignment="Left" Width="280" Margin="10,10,0,0" VerticalAlignment="Stretch" SelectionMode="None">
            <TextBox x:ConnectionId='4' x:Name="ExampleCityTextBox"/>
            <Button x:ConnectionId='5' x:Name="ConfirmCityButton" Content="ObtainWeather"                                />
            <Button x:ConnectionId='6' x:Name="ShowSunnyButton" Content="ForceSunny"                              />
            <Button x:ConnectionId='7' x:Name="ShowRainButton" Content="ForceRainy"                             />
        </ListView>
        <Rectangle Fill="{StaticResource SolidBackgroundFillColorBaseBrush}" Margin="300,0,5,5" RadiusX="3" RadiusY="3"/>
        <Frame x:ConnectionId='3' x:Name="ContentFrame" Content="WeatherView" Margin="300,0,5,5" CornerRadius="3"/>
    </Grid>
</Page>

