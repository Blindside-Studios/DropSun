<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DropSun.Views.WrapperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropSun.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <ListView HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBox x:Name="ExampleCityTextBox" Width="180"/>
            <Button x:Name="ConfirmCityButton" Content="ObtainWeather" Click="ConfirmCityButton_Click"/>
            <Button x:Name="ShowSunnyButton" Content="ForceSunny" Click="ShowSunnyButton_Click"/>
            <Button x:Name="ShowRainButton" Content="ForceRainy" Click="ShowRainButton_Click"/>
        </ListView>
        <Rectangle Fill="{StaticResource SolidBackgroundFillColorBaseBrush}" Margin="300,0,5,5" RadiusX="3" RadiusY="3"/>
        <Frame x:Name="ContentFrame" Content="WeatherView" Margin="300,0,5,5" CornerRadius="3"/>
    </Grid>
</Page>
